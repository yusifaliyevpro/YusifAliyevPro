generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Contact {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  fullName    String
  email       String
  phone       String
  hasWhatsApp Boolean  @default(false)
  description String
  isCalled    Boolean  @default(false)
  createdAt   DateTime @default(now())
}
